<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Shadow with offset (bottom-right) -->
    <!-- Large spread shadow -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#08000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Core shadow -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#25000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main content -->
    <item android:right="5dp" android:bottom="5dp" android:top="5dp" android:left="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lyWhite" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>