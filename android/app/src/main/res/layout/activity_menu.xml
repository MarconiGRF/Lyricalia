<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:background="@color/lyWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/safeZone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lyWhite"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        tools:context=".activities.MenuActivity">

        <TextView
            android:id="@+id/lyricaliaTextBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/lyDarkerGray"
            android:text="@string/app_name"
            android:fontFamily="@font/domine"
            android:textFontWeight="600"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@id/safeZone"
            app:layout_constraintEnd_toEndOf="@id/safeZone"
            app:layout_constraintTop_toTopOf="@id/safeZone"
            app:layout_constraintBottom_toBottomOf="@id/safeZone"
            app:layout_constraintVertical_bias="0.02" />

        <TextView
            android:id="@+id/greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/lyDarkerGray"
            android:text="Oi, $USER"
            android:fontFamily="@font/domine"
            android:textFontWeight="400"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/safeZone"
            app:layout_constraintEnd_toEndOf="@id/safeZone"
            app:layout_constraintTop_toBottomOf="@id/lyricaliaTextBrand"
            app:layout_constraintBottom_toBottomOf="@id/safeZone"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.05" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
