<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menu"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/lyWhite"
        android:padding="10dp"
        tools:context=".activities.MenuActivity"
        android:clipToPadding="false">

        <ImageButton
            android:id="@+id/closeButton"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:src="@drawable/sharp_close_24"
            android:fontFamily="@font/domine"
            android:textFontWeight="200"
            android:textColor="@color/lyDarkerGray"
            android:backgroundTint="#00FFFFFF"
            android:layout_above="@id/matchId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/matchId"
            app:layout_constraintBottom_toBottomOf="@id/matchId"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/matchId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/lyDarkerGray"
            android:text="$MATCH_ID"
            android:fontFamily="@font/domine"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-10dp"
            android:background="@drawable/bottom_only_shade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matchId"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hostContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.42"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pointingMatchId"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleX="1"
                android:scaleY="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/baseline_straight_24"
                app:layout_constraintVertical_bias="0" />
            <TextView
                android:id="@+id/joinHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/domine"
                android:textColor="@color/lyDarkerGray"
                android:textSize="18sp"
                android:text="@string/host_join_hint"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/pointingMatchId"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0" />
            <Button
                android:id="@+id/createMatchButton"
                android:minWidth="200dp"
                android:layout_width="wrap_content"
                android:minHeight="50dp"
                android:layout_height="wrap_content"
                android:text="@string/play"
                android:fontFamily="@font/domine"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:backgroundTint="@color/lyGreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/joinHint"
                android:layout_marginTop="60dp"/>
            <Button
                android:id="@+id/deleteppl"
                android:minWidth="200dp"
                android:layout_width="wrap_content"
                android:minHeight="50dp"
                android:layout_height="wrap_content"
                android:text="deleteppl"
                android:fontFamily="@font/domine"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:backgroundTint="@color/lyGreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createMatchButton"
                android:layout_marginTop="60dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:visibility="gone">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/otherPlayers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:dividerPadding="5dp">
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
