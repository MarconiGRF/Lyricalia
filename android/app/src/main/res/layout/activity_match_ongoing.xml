<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/lyWhite"
        android:padding="10dp"
        tools:context=".activities.match.MatchOngoingActivity"
        android:clipToPadding="false">

        <!-- Header -->
        <ImageButton
            android:id="@+id/closeButton"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:src="@drawable/sharp_close_24"
            android:fontFamily="@font/domine"
            android:textFontWeight="200"
            android:textColor="@color/lyDarkerGray"
            android:backgroundTint="#00FFFFFF"
            android:layout_above="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/header"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintHorizontal_bias="0" />
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/lyDarkerGray"
            android:text="TaylorSwiftFlop"
            android:fontFamily="@font/domine"
            android:textFontWeight="600"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/challengeIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/lyDarkerGray"
            android:text="0/5"
            android:fontFamily="@font/domine"
            android:textSize="24sp"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/header"
            app:layout_constraintBottom_toBottomOf="@id/header"/>
        <!-- Header -->

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-10dp"
            android:alpha="0"
            android:background="@drawable/bottom_only_shade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0" />
        <View
            android:id="@+id/animatedProgressBar"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="@drawable/rectangle_shape"
            app:layout_constraintVertical_bias="0"
            android:elevation="4dp"
            android:visibility="gone"
            />

        <!-- GClef and Loader -->
        <ImageView
            android:id="@+id/gclef"
            android:layout_width="35dp"
            android:layout_height="100dp"
            android:src="@drawable/gclef"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:rotation="22"
            android:alpha="0" />
        <TextView
            android:id="@+id/loadingHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/domine"
            android:textColor="@color/lyDarkerGray"
            android:textSize="22sp"
            android:text="@string/loading_hint_simpler"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:letterSpacing="0.4"
            app:layout_constraintTop_toBottomOf="@id/gclef"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0"
            android:visibility="invisible"/>
        <!-- GClef and Loader -->

        <LinearLayout
            android:id="@+id/currentChallengeHint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            android:paddingHorizontal="10dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible">
            <TextView
                android:id="@+id/challengeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_fill_lyrics"
                android:textColor="@color/lyDarkerGray"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/domine"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/songNameHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:textColor="@color/lyDarkerGray"
                android:text="SongName"
                android:textAlignment="center"
                android:fontFamily="@font/domine"
                android:textSize="36dp"
                android:textFontWeight="600" />
            <TextView
                android:id="@+id/artistHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:textColor="@color/lyDarkerGray"
                android:text="Artist"
                android:textAlignment="center"
                android:fontFamily="@font/domine"
                android:textSize="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:gravity="center"
            app:flow_horizontalAlign="center"
            android:dividerPadding="10dp"
            android:visibility="gone">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerIndicators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:clipToOutline="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0"
            android:translationZ="1dp"
            android:orientation="horizontal"
            android:gravity="start"
            app:flow_horizontalAlign="start"
            android:dividerPadding="3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone">
        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:minWidth="120dp"
            android:layout_width="wrap_content"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:fontFamily="@font/domine"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:backgroundTint="@color/lyGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"/>

        <HorizontalScrollView
            android:id="@+id/answerCarouselScrollWrapper"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/currentChallengeHint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="320dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="30dp"
            android:clipToPadding="false"
            android:visibility="gone"
            android:scrollbars="none"
            android:alpha="0">

            <LinearLayout
                android:id="@+id/answerCarousel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:dividerPadding="5dp"
                android:clipToPadding="false">
            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/playerScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/answerCarouselScrollWrapper"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:alpha="0"/>

        <Button
            android:id="@+id/iterateChallengeButton"
            android:minWidth="120dp"
            android:layout_width="wrap_content"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:text="Pronto"
            android:fontFamily="@font/domine"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:backgroundTint="@color/lyGreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:alpha="0"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
